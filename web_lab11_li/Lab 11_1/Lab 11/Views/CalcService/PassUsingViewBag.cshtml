@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var sum = ViewBag.Data.FirstNumber + ViewBag.Data.SecondNumber;
    var sub = ViewBag.Data.FirstNumber - ViewBag.Data.SecondNumber;
    var mult = ViewBag.Data.FirstNumber * ViewBag.Data.SecondNumber;
    int div = 0;
    bool error = false;
    try
    {
        div = ViewBag.Data.FirstNumber / ViewBag.Data.SecondNumber;
    }
    catch (DivideByZeroException)
    {
        error = true;
    }
}

<div class="content">
    <h2>@ViewBag.Data.Title</h2>
    <p><strong>Rand Value First : @ViewBag.Data.FirstNumber</strong></p>
    <p><strong>Rand Value Second : @ViewBag.Data.SecondNumber</strong></p>
    <p><strong>Add :</strong></p>
    <p>@ViewBag.Data.FirstNumber + @ViewBag.Data.SecondNumber = @sum</p>
    <p><strong>Sub :</strong></p>
    <p>@ViewBag.Data.FirstNumber - @ViewBag.Data.SecondNumber = @sub</p>
    <p><strong>Mult :</strong></p>
    <p>@ViewBag.Data.FirstNumber * @ViewBag.Data.SecondNumber = @mult</p>
    <p><strong>Div :</strong></p>
    @if (error == true)
    {
        <p>Деление на 0 запрещено!</p>
    }
    else
    {
        <p>@ViewBag.Data.FirstNumber / @ViewBag.Data.SecondNumber = @div</p>
    }
</div>
