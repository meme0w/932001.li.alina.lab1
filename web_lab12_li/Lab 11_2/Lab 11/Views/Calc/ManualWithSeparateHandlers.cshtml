@model Lab11_2.ViewModel.Data

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <h2>@ViewData["Title"]</h2>
    @using (Html.BeginForm("ManualWithSeparateHandlers", "Calc", FormMethod.Post))
    {
        <p>
            @Html.TextBox("FirstNumber","", new { type="number" })
        </p>
        <p>
            @Html.DropDownList("Operation", new SelectList(new string[] { "+", "-", "*", "/" }), "")
        </p>
        <p>
            @Html.TextBox("SecondNumber","", new { type="number" })
        </p>
        <p>
            <input type="submit" value="Submit" />
        </p>
    }
</div>
